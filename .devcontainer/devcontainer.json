{
  "name": "OpenLigaDB Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13-bookworm",

  "runArgs": ["--dns", "8.8.8.8", "--dns", "8.8.4.4"],
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "astral-sh.ruff",
        "keesschollaart.vscode-home-assistant"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "astral-sh.ruff"
      }
    }
  },

  "postCreateCommand": "pip3 install --upgrade pip --break-system-packages && pip3 install --break-system-packages homeassistant ruff pytest-homeassistant-custom-component && mkdir -p config && ln -sfn ${containerWorkspaceFolder}/custom_components config/custom_components",

  "remoteUser": "vscode",
  "forwardPorts": [8123],
  
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant UI",
      "onAutoForward": "notify"
    }
  }
}